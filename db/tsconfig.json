{
  "compilerOptions": {
    /* Base Options: */
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022", // Adjust this based on your Node.js version's supported target
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "auto", // Change from "force" to "node" for Node.js
    "isolatedModules": true,
    /* Strictness */
    "strict": true,
    "types": ["node"],
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    /* Node.js project specific options: */
    "outDir": "dist", // Add an output directory for compiled JavaScript files
    "module": "NodeNext", // Change from "ESNext" to "commonjs" for Node.js modules
    "moduleResolution": "NodeNext",
    "lib": ["dom", "dom.iterable", "ES2022"], // Might not be necessary depending on your project
    "declaration": false, // Remove if you don't need type declaration files
    "sourceMap": true, // Enable source maps for debugging (optional)
    "incremental": true
  },
  "include": ["src/**/*", "@types/**/*", "prisma/**/*", "*.ts"],
  "exclude": [
    "node_modules"
  ]
}
