generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id            Int       @id @default(autoincrement())
  phone              String
  email              String    @unique
  password           String
  salt               String
  userType           String
  first_name         String?
  last_name          String?
  profile_pic        String?
  verification_code  Int?
  expiry             DateTime?
  verified           Boolean   @default(false)
  created_at         DateTime  @default(now())

  @@index([phone])
}